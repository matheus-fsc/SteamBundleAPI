# Configurações de produção
NODE_ENV=production
PORT=3000
TIMEZONE=America/Sao_Paulo

# API Key para proteger endpoints administrativos
# Gere uma chave segura: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
API_KEY=sua_api_key_super_secreta_aqui

# === CONFIGURAÇÕES OTIMIZADAS DE PERFORMANCE ===

# PROCESSAMENTO PARALELO (MAIOR IMPACTO NA VELOCIDADE)
# Quantas bundles processar simultaneamente
PARALLEL_BUNDLES=10

# Delay entre lotes de bundles (ms) - REDUZIDO para acelerar
STEAM_API_DELAY=300

# Delay entre chamadas de app details (ms)
STEAM_APP_DELAY=50

# LIMITAÇÕES INTELIGENTES PARA ACELERAR
# Máximo de apps por bundle para buscar detalhes
MAX_APPS_PER_BUNDLE=30

# Pular detalhes para bundles gigantes (ECONOMIA MASSIVA DE TEMPO)
SKIP_DETAILS_THRESHOLD=100

# Tamanho do lote para app details em paralelo
APP_BATCH_SIZE=8

# CONFIGURAÇÕES DE CONFIABILIDADE
# Timeout para requisições Steam (ms) - reduzido
REQUEST_TIMEOUT=8000

# Número de tentativas em caso de erro - reduzido
MAX_RETRIES=2

# === CONFIGURAÇÕES POR CENÁRIO ===
# TESTE RÁPIDO: PARALLEL_BUNDLES=5, STEAM_API_DELAY=200, SKIP_DETAILS_THRESHOLD=50
# PRODUÇÃO RÁPIDA: PARALLEL_BUNDLES=15, STEAM_API_DELAY=200, SKIP_DETAILS_THRESHOLD=150  
# PRODUÇÃO SEGURA: PARALLEL_BUNDLES=5, STEAM_API_DELAY=500, SKIP_DETAILS_THRESHOLD=200

# Configurações de rate limiting
MAX_CONCURRENT_REQUESTS=5
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
ADMIN_RATE_LIMIT_MAX=5
